@model EmailManager.Models.ViewModels.EditSenderPersonalDataViewModel

@{
    ViewBag.Title = Model.Heading;
}

<h1>@Model.Heading</h1>

<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("SenderPersonalData", "Configuration"))
        {
            @Html.AntiForgeryToken()

            if (Model.SenderPersonaldata.Id == 0)
            {
                <p class="alert alert-info mt-4 mb-4">Pola nazwa, stanowisko PL oraz numer telefonu są <strong>wymagane</strong></p>
            }

            @Html.HiddenFor(x => x.SenderPersonaldata.Id)
            @Html.HiddenFor(x => x.SenderPersonaldata.UserId)

            <div class="form-group">
                @Html.LabelFor(x => x.SenderPersonaldata.Name)
                @Html.TextBoxFor(x => x.SenderPersonaldata.Name, new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.SenderPersonaldata.Name)
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.SenderPersonaldata.CompanyPositionPl)
                @Html.TextBoxFor(x => x.SenderPersonaldata.CompanyPositionPl, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SenderPersonaldata.CompanyPositionPl)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.SenderPersonaldata.CompanyPositionEn)
                @Html.TextBoxFor(x => x.SenderPersonaldata.CompanyPositionEn, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SenderPersonaldata.CompanyPositionEn)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.SenderPersonaldata.PhoneNumber)
                @Html.TextBoxFor(x => x.SenderPersonaldata.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SenderPersonaldata.PhoneNumber)
            </div>

            <div class="btn-lg mt-5">
                <button class="btn btn-primary mb-5" type="submit">Zapisz</button>
            </div>
        }

        <button class="btn btn-secondary btn-lg mb-5" onclick='window.location.href="@Url.Action("SenderPersonalDataIndex","Configuration")"'>Wróć</button>

    </div>
</div>

@section Scripts
{
    <script type="text/javascript">


    </script>

}

