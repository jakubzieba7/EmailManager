@model EmailManager.Models.ViewModels.EditReceiverDataViewModel

@{
    ViewBag.Title = Model.Heading;
}

<h1>@Model.Heading</h1>

<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("ReceiverData", "Configuration"))
        {
            @Html.AntiForgeryToken()

            if (Model.ReceiverData.Id == 0)
            {
                <p class="alert alert-info mt-4 mb-4">Pola nazwa oraz adres email są <strong>wymagane</strong></p>
            }

            @Html.HiddenFor(x => x.ReceiverData.Id)
            @Html.HiddenFor(x => x.ReceiverData.UserId)

            <div class="form-group">
                @Html.LabelFor(x => x.ReceiverData.Name)
                @Html.TextBoxFor(x => x.ReceiverData.Name, new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.ReceiverData.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.ReceiverData.EmailAddress)
                @Html.TextBoxFor(x => x.ReceiverData.EmailAddress, new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.ReceiverData.EmailAddress)
            </div>

            <div class="btn-lg mt-5">
                <button class="btn btn-primary mb-5" type="submit">Zapisz</button>
            </div>
        }

        <button class="btn btn-secondary btn-lg mb-5" onclick='window.location.href="@Url.Action("ReceiverDataIndex","Configuration")"'>Wróć</button>

    </div>
</div>

@section Scripts
{
    <script type="text/javascript">


    </script>

}

